@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>@Model.Name</h2>

    <ul>
        <li>Genre: <text>@Model.Genre.Name</text></li>
        <li>
            Release Date: <text>@Model.ReleaseDate</text>
        </li>
        <li>
            Date Added: <text>@Model.DateAdded</text>
        </li>
        <li>
            Number In Stock: <text>@Model.NumberInStock</text>
        </li>

    </ul>

    
</div>

