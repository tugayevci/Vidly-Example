@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="@Url.Action("New","Customer")" class="btn btn-primary" style="margin-top:2%">Add New Customer</a>

<div class="container" style="margin-top:2%">

    @if (Model.Count == 0)
    {
        <text>We dont have customer yet.</text>
    }
    else
    {

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Membership Type</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var customer in Model)
                {
                    <tr>
                        <th scope="row">@customer.Id</th>
                        <td>@Html.ActionLink(customer.Name, "Edit", "Customer", new { id = customer.Id }, null)</td>
                        <td>@customer.MembershipType.MembershipTypeName</td>
                    </tr>
                }
            </tbody>
        </table>

    }

</div>

