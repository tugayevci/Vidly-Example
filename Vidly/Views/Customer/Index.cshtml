@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="@Url.Action("New","Customer")" class="btn btn-primary" style="margin-top:2%">Add New Customer</a>

<div class="container" style="margin-top:2%">

    @if (Model.Count == 0)
    {
        <text>We dont have customer yet.</text>
    }
    else
    {

        <table id="customers"class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Membership Type</th>
                    <th scope="col">Delete</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var customer in Model)
                {
                    <tr>
                        <th scope="row">@customer.Id</th>
                        <td>@Html.ActionLink(customer.Name, "Edit", "Customer", new { id = customer.Id }, null)</td>
                        <td>@customer.MembershipType.MembershipTypeName</td>
                        <td>
                            <button data-customer-id="@customer.Id" class="btn-link js-delete">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }

</div>
@section scripts
    {
    <script>
        $(document).ready(function () {
            $("#customers .js-delete").on("click", function () {
                var button = $(this);
                bootbox.confirm("Are you sure to delete this customer?", function (result)
                {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                console.log("success");
                                button.parents("tr").remove();
                            }
                        })
                    }
                })
                
            })
        });
    </script>
    
    }
